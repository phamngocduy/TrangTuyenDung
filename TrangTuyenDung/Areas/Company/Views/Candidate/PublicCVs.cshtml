@model IEnumerable<TrangTuyenDung.Models.CV_Publics>
@{
    ViewBag.Title = "CV đề xuất";
    ViewBag.active = "recommendCV";
    Layout = "~/Areas/Company/Views/Shared/_LayoutCompany.cshtml";
}

<!-- Page Header -->
<div class="page-header row no-gutters py-4">
    <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
        <span class="text-uppercase page-subtitle">Dashboard</span>
        <h3 class="page-title">
            CV Đề Xuất
        </h3>
    </div>
</div>

<!-- Content -->
<div class="row">
    @foreach (var cv in Model) {
        <div class="col-12 col-md-3 mb-4">
            <div class="card card-small mb-4 pt-3 h-100">
                <div class="card-header border-bottom text-center">
                    <div class="mb-3 mx-auto">
                        <img class="rounded-circle" src="@Url.Content("~/App_Data/Student/Logos/" + cv.Student_Info.Account_Id + "?r=" + ViewBag.Random)" alt="Ejob User avatar @cv.Student_Info.Student_Name" width="110">
                    </div>
                    <h4 class="mb-0" title="Họ tên">@cv.Student_Info.Student_Name</h4>
                    <span class="text-muted d-block mb-2" title="Chuyên ngành">@cv.Student_Info.Faculty.Name</span>
                    <a href="@Url.Action("ViewPublicCV", "Candidate", new { area = "Company", @id = cv.Id})" class="mb-2 btn btn-sm btn-pill btn-outline-primary mr-2" target="_blank" role="button">Xem CV</a>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item p-3">
                        <div>
                            <strong class="text-muted mb-2">Giới tính: </strong>
                            <span>@(cv.Student_Info.Student_Gender == true ? "Nam" : "Nữ")</span>
                        </div>
                        <div>
                            <strong class="text-muted mb-2">Địa chỉ: </strong>
                            <span>@cv.Student_Info.Student_Address</span>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    }
</div>

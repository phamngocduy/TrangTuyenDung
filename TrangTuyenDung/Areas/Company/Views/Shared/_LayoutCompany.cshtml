@using Microsoft.AspNet.Identity

<!doctype html>
<html class="no-js h-100" lang="en">
<head>
    <title>@ViewBag.title | EJOB</title>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="Tìm việc làm cho sinh viên Văn Lang.">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Icon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/Assets/img/favicon.ico">

    <!--Font-awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css" integrity="sha256-+N4/V/SbAFiW1MPBCXnfnP9QSN3+Keu+NlB+0ev/YKQ=" crossorigin="anonymous" />

    <!-- Font -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <!-- CSS -->
    <link rel="stylesheet" id="main-stylesheet" data-version="1.1.0" href="~/Content/company/shards-dashboards-default.min.css">
    <link rel="stylesheet" href="~/Content/company/extras.min.css">

    <style>
        .user-avatar {
            min-width: 7rem;
            height: inherit;
        }

            .user-avatar img {
                height: 100%;
                width: 30px;
                display: flex;
                vertical-align: middle;
            }
    </style>
    @RenderSection("styles", required: false)
</head>
<body class="h-100">
    <div class="container-fluid">
        <div class="row">
            <!-- Main Sidebar -->
            <aside class="main-sidebar col-12 col-md-3 col-lg-2 px-0">
                <div class="main-navbar">
                    <nav class="navbar align-items-stretch navbar-light bg-white flex-md-nowrap border-bottom p-0">
                        <a class="navbar-brand w-100 mr-0" href="@Url.Action("IndexCallBack", "Home", new { area=""})" style="line-height: 25px;">
                            <div class="d-table m-auto">
                                <img id="main-logo" class="d-inline-block align-top mr-1" style="max-width: 120px;" src="~/Assets/img/vlu-logo-blue.png" alt="EJOB Văn Lang">
                            </div>
                        </a>
                        <a class="toggle-sidebar d-sm-inline d-md-none d-lg-none">
                            <i class="material-icons">&#xE5C4;</i>
                        </a>
                    </nav>
                </div>

                <div class="nav-wrapper">
                    <ul class="nav flex-column">
                        <!-- Summary -->
                        <li class="font-weight-bold text-primary mx-3 my-3">Tổng quan</li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.active == "dashboard" ? "active" : "")" href="@Url.Action("Dashboard", "Home", new { area = "Company" })">
                                <i class="material-icons">view_module</i>
                                <span>Bảng điều khiển</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.active == "update-company" ? "active" : "")" href="@Url.Action("Update", "Account", new { area="Company" })">
                                <i class="far fa-building"></i>
                                <span>Thông tin công ty</span>
                            </a>
                        </li>
                        @*<li class="nav-item">
                            @*<li class="nav-item">
                                    <a class="nav-link " href="@Url.Action("Statistic","Home", new { area = "Company" , id = User.Identity.GetUserId()})">
                                        <span style="padding-left: 24px">Thống kê</span>
                                    </a>
                                </li>*@

                        <!-- Recruiment Manage -->
                        <li class="font-weight-bold text-primary mx-3 my-3">Tin tuyển dụng</li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.active == "create" ? "active" : "")" href="@Url.Action("Create", "Recruitment",new { area = "Company" })">
                                <i class="material-icons">note_add</i>
                                <span>Đăng tin tuyển dụng</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.active == "list" ? "active" : "")" href="@Url.Action("List", "Recruitment", new { area = "Company"})">
                                <i class="fas fa-list-ul"></i>
                                <span>Tin đã đăng</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.active == "pending" ? "active" : "")" href="@Url.Action("Pending", "Recruitment", new { area = "Company" })">
                                <i class="fas fa-spinner"></i>
                                <span>Tin đợi duyệt</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.active == "rejected" ? "active" : "")" href="@Url.Action("Rejected", "Recruitment", new { area = "Company" })">
                                <i class="fas fa-times"></i>
                                <span>Tin cần điều chỉnh</span>
                            </a>
                        </li>

                        <!-- Employeer -->
                        <li class="font-weight-bold text-primary mx-3 my-3">Ứng viên</li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.active == "candidate-pending" ? "active" : "")" href="@Url.Action("Pending","Candidate",new { area = "Company"})">
                                <i class="fas fa-users"></i>
                                <span>Ứng tuyển</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.active == "candidate-interview" ? "active" : "")" href="@Url.Action("Interviewing", "Candidate", new { area = "Company" })">
                                <i class="fas fa-user-clock"></i>
                                <span>Đợi phỏng vấn</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.active == "candidate-interview" ? "active" : "")" href="@Url.Action("Fail", "Candidate", new { area = "Company" })">
                                <i class="fas fa-user-clock"></i>
                                <span>Trượt Phỏng vấn</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.active == "candidate-approved" ? "active" : "")" href="@Url.Action("Hired", "Candidate", new { area = "Company" , @status = 7 })">
                                <i class="fas fa-user-tie"></i>
                                <span>Được tuyển</span>
                            </a>
                        </li>
                        @* Nhãm nhí
                            <li class="nav-item">
                                <a class="nav-link @(ViewBag.active == "candidate-recommend" ? "active" : "")" href="@Url.Action("Hired", "Candidate", new { area = "Company" , @status = 8 })">
                                    <i class="fas fa-user-clock"></i>
                                    <span>Tiềm năng</span>
                                </a>
                            </li>*@
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.active == "recommendCV" ? "active" : "")" href="@Url.Action("PublicCVs", "Candidate", new { area = "Company" })">
                                <i class="far fa-address-card"></i>
                                <span>CV Đề xuất</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </aside>
            <!-- End Main Sidebar -->
            <main class="main-content col-lg-10 col-md-9 col-sm-12 p-0 offset-lg-2 offset-md-3">
                <div class="main-navbar sticky-top bg-white">
                    <!-- Main Navbar -->
                    <nav class="navbar align-items-stretch navbar-light flex-md-nowrap p-0">
                        <form action="#" class="main-navbar__search w-100 d-none d-md-flex d-lg-flex">
                            <div class="input-group input-group-seamless ml-3">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        <i class="fas fa-search"></i>
                                    </div>
                                </div>
                                <input class="navbar-search form-control" type="text" placeholder="Search for something..." aria-label="Search">
                            </div>
                        </form>

                        <!-- User Avarta -->
                        <ul class="navbar-nav border-left flex-row">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-nowrap px-3" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                    <div class="user-avatar d-flex align-items-center">
                                        @*<img class="rounded-circle mr-2" src="@Url.Content("~/App_Data/Company/Logos/" + Model.Id + "?UpdateKey=" + ViewBag.Random)" alt="@ViewBag.Random">*@

                                        <span class="d-none d-md-inline-block">
                                            @Html.Action("Get_Company_Name", "Manage", new { area = "", user_id = User.Identity.GetUserId() })
                                        </span>
                                    </div>
                                </a>
                                <div class="dropdown-menu dropdown-menu-small">
                                    <a class="dropdown-item" href="@Url.Action("Update","Account",new { area = "Company" , id = User.Identity.GetUserId()})">
                                        <i class="material-icons">&#xE7FD;</i> Tài Khoản
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    @if (Request.IsAuthenticated) {
                                        using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "dropdown-item" })) {
                                            @Html.AntiForgeryToken()
                                            <a class="d-inline text-muted" href="javascript:document.getElementById('logoutForm').submit()">
                                                <i class="fas fa-sign-out-alt mr-1"></i>
                                                Đăng xuất
                                            </a>
                                        }
                                    }
                                </div>
                            </li>
                        </ul>
                        <nav class="nav">
                            <a href="#" class="nav-link nav-link-icon toggle-sidebar d-md-inline d-lg-none text-center border-left" data-toggle="collapse" data-target=".header-navbar" aria-expanded="false" aria-controls="header-navbar">
                                <i class="material-icons">&#xE5D2;</i>
                            </a>
                        </nav>
                    </nav>
                </div>

                <!-- / .main-navbar -->
                <div class="main-content-container container-fluid px-4">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/shards-ui@latest/dist/js/shards.min.js"></script>
    <script src="~/Scripts/company/shards-dashboards-default.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>

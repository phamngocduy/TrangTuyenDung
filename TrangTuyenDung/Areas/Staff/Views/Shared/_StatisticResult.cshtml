@model TrangTuyenDung.Areas.Staff.Models.StaffStatisticViewModel

<div class="row">
    <div class="col-lg-12">
        <div class="box">
            <div class="box-body">
                <div class="table-responsive">
                    <table id="example" class="table table-bordered table-hover display nowrap margin-top-10 w-p100">
                        <thead>
                            <tr>
                                <th scope="col">Mục thống kê</th>
                                <th scope="col">Nội dung</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">Mốc thời gian</th>
                                <td>
                                    @Html.Raw(Model.Time)
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">Tin Tuyển Dụng</th>
                                <td>
                                    - Tổng số tin: @Model.numRecs <br />
                                    - Tin đã duyệt: @Model.numApprovedRecs
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">Vị Trí Công Việc Đã Tuyển</th>
                                <td>
                                    @Html.Raw(Model.staJP)
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">Loại Hình Công Việc</th>
                                <td>
                                    - Toàn thời gian (Full-time): @Model.numFullTime  <br />
                                    - Bán thời gian (Part-time): @Model.numPartTime  <br />
                                    - Thực tập sinh (Internship): @Model.numIntern
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">Ứng Viên</th>
                                <td>
                                    - Tổng ứng viên: @Model.numApplied  <br />
                                    - Ứng viên "Đang ứng tuyển": @Model.numApplying  <br />
                                    - Ứng viên "Được tuyển": @Model.numApprovedCan
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">Ngày Thống Kê</th>
                                <td>
                                    @Model.Now
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">Nhân Viên Thống Kê</th>
                                <td>
                                    @Model.staffEmail
                                </td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr></tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

      crossorigin="anonymous">



@if (Request.IsAuthenticated) {
    if (User.IsInRole("Student")) {
        <div>@Html.Action("ShowListMajorCompany", "Home", new { area = "" })</div>
    }
}
else {
    <div>@Html.Action("ShowListAllCompany", "Home", new { area = "" })</div>
}

@section scripts
    {
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/Scripts/Js_Company/bootstrap.min.js"></script>
    <script src="~/Scripts/Js_Company/InformationsCompany/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/Js_Company/InformationsCompany/jquery-migrate-3.0.0.min.js"></script>

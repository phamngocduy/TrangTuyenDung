<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>EJOB - @ViewBag.title</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/Assets/img/favicon.ico">

    <!--Font-awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css" integrity="sha256-+N4/V/SbAFiW1MPBCXnfnP9QSN3+Keu+NlB+0ev/YKQ=" crossorigin="anonymous" />

    <!-- Roboto font -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,500,500i,700,700i&display=swap&subset=vietnamese" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Content/Admin/sb-admin-2.css" rel="stylesheet">

    @RenderSection("Styles", required: false)
</head>

<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion toggled" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="@Url.Action("IndexCallBack", "Home", new { area="" })">
                <div class="sidebar-brand-icon">
                    <img src="~/Assets/img/vlu-logo-foot.png" alt="Ejob" style="max-height: 50px;" />
                </div>
            </a>
            <hr class="sidebar-divider my-0">

            @if (User.IsInRole("Staff")) {
                <!-- navitem - dashboard -->
                <li class="nav-item @(ViewBag.itemActive == "dashboard" ? "active" : null)">
                    <a class="nav-link" href="@Url.Action("Dashboard", "Home",new { area = "Staff" })" title="Bảng điều khiển">
                        <i class="fa fa-desktop fa-fw" aria-hidden="true"></i>
                        <span>Bảng điều khiển</span>
                    </a>
                </li>

                <!-- navitem - statistic -->
                <li class="nav-item @(ViewBag.itemActive == "statistic" ? "active" : null)">
                    <a class="nav-link" href="@Url.Action("Statistic", "Home", new { area = "Staff" })" title="Thống kê">
                        <i class="fas fa-fw fa-chart-area" aria-hidden="true"></i>
                        <span>Thống kê</span>
                    </a>
                </li>

                <!-- navitem - manage recruitment -->
                <li class="nav-item @(ViewBag.itemActive == "recruitment" ? "active" : null)">
                    <a class="nav-link collapsed" href="#" title="Quản lý tin tuyển dụng" data-toggle="collapse" data-target="#collapseUtilities" aria-expanded="true" aria-controls="collapseUtilities">
                        <i class="far fa-newspaper"></i>
                        <span>Tin tuyển dụng</span>
                    </a>
                    <div id="collapseUtilities" class="collapse" aria-labelledby="headingUtilities" data-parent="#accordionSidebar">
                        <div class="bg-white py-2 collapse-inner rounded">
                            <h6 class="collapse-header">Quản lý tin tuyển dụng:</h6>
                            <a class="collapse-item" href="@Url.Action("Post_NewRecruitment", "Recruitment", new { area="Staff" })">Đăng tin mới</a>
                            <a class="collapse-item" href="@Url.Action("List", "Recruitment", new { area="Staff" })">Danh sách tin</a>
                            <a class="collapse-item" href="@Url.Action("Approve", "Recruitment", new { area="Staff" })">Tin chờ xác nhận</a>
                        </div>
                    </div>
                </li>

                <!-- navitem - manage companies -->
                <li class="nav-item @(ViewBag.itemActive == "company" ? "active" : null)">
                    <a class="nav-link collapsed" href="#" title="Quản lý công ty" data-toggle="collapse" data-target="#collapsePages" aria-expanded="true" aria-controls="collapsePages">
                        <i class="far fa-building"></i>
                        <span>Công ty</span>
                    </a>
                    <div id="collapsePages" class="collapse" aria-labelledby="headingPages" data-parent="#accordionSidebar">
                        <div class="bg-white py-2 collapse-inner rounded">
                            <h6 class="collapse-header">Quản lý công ty:</h6>
                            <a class="collapse-item" href="@Url.Action("CreateCompany", "Account", new { area = "Staff" })">Thêm công ty</a>
                            <a class="collapse-item" href="@Url.Action("ApprovedList", "Account", new { area="Staff" })">Danh sách công ty</a>
                            <a class="collapse-item" href="@Url.Action("Pending", "Account", new { area="Staff" })">Công ty chờ xác nhận</a>
                        </div>
                    </div>
                </li>

                <!-- navitem - falcuties -->
                <li class="nav-item @(ViewBag.itemActive == "faculty" ? "active" : null)">
                    <a class="nav-link collapsed" href="#" title="Quản lý khoa/ngành" data-toggle="collapse" data-target="#collapseFalcuty" aria-expanded="true" aria-controls="collapseFalcuty">
                        <i class="fas fa-graduation-cap"></i>
                        <span>Khoa/ngành</span>
                    </a>
                    <div id="collapseFalcuty" class="collapse" aria-labelledby="headingPages" data-parent="#accordionSidebar">
                        <div class="bg-white py-2 collapse-inner rounded">
                            <h6 class="collapse-header">Quản lý ngành khoa ngành:</h6>
                            <a class="collapse-item" href="@Url.Action("FacultiesList", "Faculty", new { area="Staff" })">Danh sách khoa/ngành</a>
                            <a class="collapse-item" href="@Url.Action("ListJob_Position", "Faculty", new { area="Staff" })">Danh sách vị trí việc làm</a>
                        </div>
                    </div>
                </li>

                <!-- navitem - students applied -->
                <li class="nav-item @(ViewBag.itemActive == "studentApply" ? "active" : null)">
                    <a class="nav-link collapsed" href="#" title="Sinh viên ứng tuyển" data-toggle="collapse" data-target="#collapseStudent" aria-expanded="true" aria-controls="collapseStudent">
                        <i class="fas fa-chalkboard-teacher"></i>
                        <span>Sinh viên</span>
                    </a>
                    <div id="collapseStudent" class="collapse" aria-labelledby="headingPages" data-parent="#accordionSidebar">
                        <div class="bg-white py-2 collapse-inner rounded">
                            <a class="collapse-item" href="@Url.Action("Studentlist", "Candidate", new { area = "Staff" })">Danh sách sinh viên</a>
                            <a class="collapse-item" href="@Url.Action("cvlist", "Candidate", new { area = "Staff" })">Danh sách CV</a>
                            <a class="collapse-item" href="@Url.Action("Pending", "Candidate", new { area = "Staff" })">Đang ứng tuyển</a>
                        </div>
                    </div>
                </li>

                <!-- navitem - students internship referral -->
                <li class="nav-item @(ViewBag.itemActive == "intern" ? "active" : null)">
                    <a class="nav-link collapsed" href="#" title="Sinh viên ứng tuyển" data-toggle="collapse" data-target="#collapseInternReferral" aria-expanded="true" aria-controls="collapseInternReferral">
                        <i class="fas fa-print"></i>
                        <span>Chương trình Thực tập</span>
                    </a>
                    <div id="collapseInternReferral" class="collapse" aria-labelledby="headingPages" data-parent="#accordionSidebar">
                        <div class="bg-white py-2 collapse-inner rounded">
                            <h6 class="collapse-header">Quản lý:</h6>
                            <a class="collapse-item" href="@Url.Action("List", "Internship", new { area = "Staff" })">Yêu cầu cấp giấy giới thiệu</a>
                            <a class="collapse-item" href="@Url.Action("List", "ConfirmIntern", new { area = "Staff" })">Phiếu tiếp nhận thực tập</a>
                        </div>
                    </div>
                </li>

                <!-- navitem - settings mail -->
                <li class="nav-item @(ViewBag.itemActive == "setting" ? "active" : null)">
                    <a class="nav-link collapsed" href="#" title="Cài đặt" data-toggle="collapse" data-target="#collapseSetting" aria-expanded="true" aria-controls="collapseSetting">
                        <i class="fas fa-sliders-h"></i>
                        <span>Thiết lập</span>
                    </a>
                    <div id="collapseSetting" class="collapse" aria-labelledby="headingPages" data-parent="#accordionSidebar">
                        <div class="bg-white py-2 collapse-inner rounded">
                            <a class="collapse-item" href="@Url.Action("EmailConfig", "Account", new { area = "Staff", emailType = "APPROVE" })">Mail</a>
                        </div>
                    </div>
                </li>

                <!-- Divider -->
                <hr class="sidebar-divider d-none d-md-block">
            }
            @if (User.IsInRole("Admin")) {
                <!-- navitem - dashboard -->
                <li class="nav-item @(ViewBag.itemActive == "dashboard" ? "active" : null)">
                    <a class="nav-link" href="@Url.Action("Dashboard", "Home",new { area = "Staff" })" title="Bảng điều khiển">
                        <i class="fa fa-desktop fa-fw" aria-hidden="true"></i>
                        <span>Bảng điều khiển</span>
                    </a>
                </li>

                <!-- navitem - add staff account -->
                <li class="nav-item @(ViewBag.itemActive == "createStaff" ? "active" : null)">
                    <a class="nav-link" href="@Url.Action("Create_Staff", "Account", new { area = "Admin" })" title="Thêm tài khoản">
                        <i class="fas fa-user-plus"></i>
                        <span>Thêm tài khoản</span>
                    </a>
                </li>
            }
            @if (User.IsInRole("Manager")) {
                <!-- navitem - dashboard -->
                <li class="nav-item @(ViewBag.itemActive == "dashboard" ? "active" : null)">
                    <a class="nav-link" href="@Url.Action("Dashboard", "Home",new { area = "Manager" })" title="Bảng điều khiển">
                        <i class="fa fa-desktop fa-fw" aria-hidden="true"></i>
                        <span>Bảng điều khiển</span>
                    </a>
                </li>

                <!-- navitem - statistic -->
                <li class="nav-item @(ViewBag.itemActive == "statistic" ? "active" : null)">
                    <a class="nav-link" href="@Url.Action("Statistic", "Home", new { area = "Manager" })" title="Thống kê">
                        <i class="fas fa-fw fa-chart-area" aria-hidden="true"></i>
                        <span>Thống kê</span>
                    </a>
                </li>
            }
            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>
        </ul>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <a class="text-gray-600" href="@Url.Action("IndexCallBack", "Home", new { area="" })">Trang chủ</a>

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">

                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small">@User.Identity.Name</span>
                                <img class="img-profile rounded-circle" src="~/Assets/img/headshot.jpg">
                            </a>
                            <!-- Dropdown - User Information -->
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Đăng xuất
                                </a>
                            </div>
                        </li>
                    </ul>
                </nav>

                <div class="container-fluid px-md-4 px-2">
                    @RenderBody()
                </div>

            </div>

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Van Lang - EJOB 2020</span>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h6 class="modal-title font-weight-medium" id="exampleModalLabel">Đăng xuất</h6>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Bạn có muốn đăng xuất?.</div>
                <div class="modal-footer">
                    <button class="btn btn-sm btn-light" type="button" data-dismiss="modal">Hủy</button>
                    @if (Request.IsAuthenticated) {
                        using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm" })) {
                            @Html.AntiForgeryToken()
                            <a class="btn btn-primary btn-sm" href="javascript:document.getElementById('logoutForm').submit()">Đăng xuất</a>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Jquery -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js" integrity="sha256-H3cjtrm/ztDeuhCN9I4yh4iN2Ybx/y1RM7rMmAesA0k=" crossorigin="anonymous"></script>

    <!-- Boostrap -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Scripts/Admin/sb-admin-2.min.js"></script>

    <!-- Scripts -->
    @RenderSection("Scripts", required: false)
</body>
</html>

@model IEnumerable<TrangTuyenDung.Models.Company_Info>

@{
    ViewBag.Title = "Welcome";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

@section Styles {
    <!-- select2 -->
    <link href="~/Content/Vendor/select2/select2.min.css" rel="stylesheet" />
    <link href="~/Content/Vendor/select2/select2-bootstrap4.min.css" rel="stylesheet" />

    <!-- homepage css -->
    <link rel="stylesheet" href="~/Content/Home/index.css" />
}

<!-- Header Searching -->
@Html.Action("partialJobFilter", "Home", new { area = "" })

<!-- Popular jobs -->
<div class="job-popular intro">
    <div class="container">
        <div class="row justify-content-center mb-1">
            <div class="col-sm-12 col-md-8 col-lg-8 text-center">
                <h2>Công việc nổi bật</h2>
                <p class="lead">
                    Nếu một công việc tốt đang thiếu tài năng, chúng tôi sẽ giúp bạn tìm thấy nó.
                </p>
            </div>
        </div>

        <div class="d-flex justify-content-center mb-4">
            <a class="btn btn-md btn-outline-primary" href="@Url.Action("ListOfRecruitment", "Recruitment")">
                Xem tất cả
            </a>
        </div>

        <div class="row">
            @foreach (var item in Model) {
                <div class="card__job col-sm-12 col-md-4 col-lg-3 mb-3">
                    <div class="card">
                        <!-- logo -->
                        <div class="logo">
                            <img class="img-fluid" src="https://ejob.vanlanguni.edu.vn/App_Data/Company/Logos/@item.Id" alt="@item.Name_Company" />
                        </div>

                        <!-- job detail -->
                        <div class="card-body">
                            <h5 class="card-title text-trunc-2">@item.Name_Company</h5>
                            @*<div class="text-muted">
                                <p class="text-trunc-2">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <span>@item.District.Type @item.District.District_Name, @item.District.Province.Type @item.District.Province.Name</span>
                                </p>
                            </div>*@
                        </div>
                        <a class="stretched-link" href="@Url.Action("Company", "Home", new { area="", id = item.Id })"></a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Counter -->
<div class="counter intro bg-primary">
    <div class="container my-4">
        <div class="row text-white text-center">
            <div class="col-sm-12 col-md-4">
                <h2 class="font-weight-medium"><span class="counter-anim">@ViewBag.count</span> +</h2>
                <p class="h5 font-weight-light">Tin Tuyển Dụng Hiện Có</p>
            </div>
            <div class="col-sm-12 col-md-4">
                <h2 class="font-weight-medium"><span class="counter-anim">@ViewBag.mem</span> +</h2>
                <p class="h5 font-weight-light">Sinh Viên</p>
            </div>
            <div class="col-sm-12 col-md-4">
                <h2 class="font-weight-medium"><span class="counter-anim">@ViewBag.com</span> +</h2>
                <p class="h5 font-weight-light">Công Ty</p>
            </div>
        </div>
    </div>
</div>


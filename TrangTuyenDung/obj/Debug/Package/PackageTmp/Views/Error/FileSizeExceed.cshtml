@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "File Error!";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<!--
AUTHOR: "Naved khan"
-->
@section styles{
    <link href="~/Content/404Style.css" rel="stylesheet" />
    <link href="~/Content/csscuatrangindex.css" rel="stylesheet" />
}

<section class="page_404">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-lg-12">
                <div class="col-sm-10 col-sm-offset-1  text-center" style="margin:auto">
                    <div class="four_zero_four_bg">
                        <h1 class="text-center ">Lỗi!</h1>
                    </div>

                    <div class="contant_box_404">
                        <h3 class="h2">
                            Oops..! Có vẻ bạn đã up file quá lớn!
                        </h3>

                        <p>Vui lòng chọn file có kích thước <strong style="color:brown">nhỏ hơn 2MB!</strong></p>
                        @if (User.IsInRole("Company")) {
                            <a href="@Url.Action("Update","Account",new { area = "Company", id = User.Identity.GetUserId()})" class="link_404">Trở về trang trước!</a>
                        }
                        else if (User.IsInRole("Student")) {
                            <a href="@Url.Action("Detail","Account",new { area = "Student"})" class="link_404">Trở về trang trước!</a>
                        }
                        else {
                            <a href="@Url.Action("IndexCallBack","Home",new { area = ""})" class="link_404">Trở về Trang Chủ!</a>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts{
    <script>
        $("footer .container").attr("style", "display:none");
    </script>
}
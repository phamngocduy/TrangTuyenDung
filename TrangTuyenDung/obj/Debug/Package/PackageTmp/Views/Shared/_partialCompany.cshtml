@model IEnumerable<TrangTuyenDung.Models.Company_Info>

<h3 class="page-title" style="text-align:center">Danh sách tất cả các công ty </h3>
<div class="listings-container compact-list-layout margin-top-35 margin-bottom-25">
    @if (Model != null) {
        foreach (var item in Model) {
            <!-- Job Listing -->
            <a href="@Url.Action("Company","Home",new { area="",id = item.Id})" class="job-listing">
                <!-- Job Listing Details -->
                <div class="job-listing-details">
                    <!-- Logo -->
                    <div class="job-listing-company-logo">
                        <img src="@Url.Content("~/App_Data/Company/Logos/" + item.Id)" alt="">
                    </div>
                    <!-- Details -->
                    <div class="job-listing-description">
                        <h3 class="job-listing-title">@item.Name_Company</h3>
                        <!-- Job Listing Footer -->
                        <div class="job-listing-footer">
                            <ul>
                                <li><i class="fas fa-map-marker-alt" style="color:#337ab7"></i> @item.District.Province.Type @item.District.Province.Name</li>
                            </ul>
                        </div>
                    </div>
                    <!-- Bookmark -->
                    <span style="font-size:30px"> <i class="far fa-arrow-alt-circle-right"></i></span>
                </div>
            </a>
        }
    }
    else {
        @Html.Action("ShowListAllCompany", "Home", new { area = "" })
    }
</div>
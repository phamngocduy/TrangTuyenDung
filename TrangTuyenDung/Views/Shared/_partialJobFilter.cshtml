<div class="header_searching" style="background-image: url(@Url.Content("~/Assets/img/banner-002.jpg"))">
    <div id="search_gradient"></div>
    <div class="search_area container h-100">
        <div class="row h-100 justify-content-center">
            <div class="col-12 col-lg-10">
                <div class="text-white pb-4">
                    <h1 class="mb-0">
                        Bạn đang tìm việc làm?
                    </h1>

                    <span class="font-weight-medium">Có rất nhiều công việc đang chờ đợi bạn</span>
                </div>

                <form method="get" action="@Url.Action("Search", "Recruitment", new { area = "" })">
                    <div class="form-row">
                        <div class="form-group col-md-4 mb-1">
                            <input id="all" name="all" type="text" class="form-control" placeholder="Từ khóa tìm kiếm" aria-label="Từ khóa tìm kiếm" aria-describedby="Từ khóa tìm kiếm">
                        </div>

                        <div class="form-group col-md-3 mb-1">
                            @Html.DropDownList("city", null, "Tỉnh/Thành Phố", htmlAttributes: new { @class = "custom-select" })
                        </div>

                        <div class="form-group col-md-3 mb-3">
                            @Html.DropDownList("fac", null, "Ngành", htmlAttributes: new { @class = "custom-select" })
                        </div>

                        <div class="form-group col-md-2">
                            <button class="btn btn-primary btn-block font-weight-medium" type="submit"><i class="fas fa-search"></i> Tìm</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
